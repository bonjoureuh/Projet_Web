<!doctype html>
<html lang="fr">


<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script   src="https://code.jquery.com/jquery-3.1.1.min.js"   integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="   crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    
    <script src="https://use.fontawesome.com/e45e963e7b.js"></script>
    



    <style>
        #title {
            font-size: 25px;
            text-align: center;
            margin-bottom: 10%;
        }

        span {
            font-weight: bold;
            text-decoration: none;
            color: #337ab7;
        }

        span:hover {
            color: #337ab7;
            text-decoration: none;
        }

        #info {
            font-size: 15px;


        }

        #button {
            color: #333;
            margin-bottom: 2%;
        }

        #button:hover {
            text-decoration: none;
            color: #777;

        }

        .infdet {
            margin-bottom: 2%;
        }

        #clee {
            text-align: center;
        }

        #clee h1 {
            text-align: center;
            margin-top: 15%;
            margin-bottom: 10%;
            font-size: 25px;
        }

        #clee_txt {
            border-style: solid;
            border-width: 0.5px;
            border-color: #777;
            border-radius: 7px;
        }

    </style>
</head>

<body>
    <div class=container>
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <h1 id="title">Résumé des informations sur l'appareil <span>"{{produit.nom}}"</span></h1>
            </div>
            <div class="col-md-3">
            </div>
        </div>


        <div id="info" class="container-fluid">
            <div class="row">
                <div class="col-md-3"></div>
                <div id="border" class="col-md-6">

                    <div class="infdet">Nom : <span>{{produit.nom }}</span></div>

                    <div class="infdet">Quantite : <span>{{produit.quantite }}</span></div>
                    <div class="infdet">Description : <span>{{produit.description }}</span></div>
                    <div class="infdet">prix : <span>{{produit.prix }}</span></div>


                    <div id="button">
                        <i style="font-weight: 400;" class="fa fa-arrow-left" aria-hidden="true"></i>
                        <a id="button" href="{{ path('produit_index') }}">Retour à la liste</a>
                    </div>
                    <div id="button">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                        <a id="button" href="{{ path('produit_edit', { 'id': produit.id }) }}">Editer</a>
                    </div>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Supprimer"> {{ form_end(delete_form) }}

                </div>
                <div class="col-md-3"></div>
            </div>

        </div>

        

    </div>
    
    <div id="retour" class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <div style="color:firebrick;" id="buttonretour">
                    <i style="font-weight: 400;" class="fa fa-arrow-left" aria-hidden="true"></i>
                    <a style="color:firebrick;" id="button" href="{{ path('fos_user_security_logout') }}">Deconnexion</a>
                </div>
            </div>
            <div class="col-md-10"></div>
        </div>
    </div>
</body>

</html>
