<!doctype html>
<html lang="fr">


<head>
    <meta name="viewport" content="width=device-width" />
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script   src="https://code.jquery.com/jquery-3.1.1.min.js"   integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="   crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    
   <script src="https://use.fontawesome.com/e45e963e7b.js"></script>
    <style>
        #retour {
            background-color: #337ab7;
            border-color: #337ab7;
            margin-top: 5%;
        }
        
        #formcle {
            
        }

    </style>

</head>

<body>

    <div style="text-align:center;" class="container">
        <div class="row">
           

                <div class="row">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                        <h3 style="color:#337ab7;" class="text-center text-danger">
                            AJOUTER UN PRODUIT
                        </h3>
                    </div>
                    <div class="col-md-4">
                    </div>
                </div>

                {{ form_start(form) }}
                <div class="row">
                    <div id="exampleInputEmail1" class="col-md-2"></div>
                    <div class="col-md-8">
                       {{ form_widget(form.nom, { 'attr': {'class': 'form-control', 'placeholder':'Nom'} }) }}
                        {% for errorItem in form.nom.vars.errors %}
                        <span class="help-inline">{{ errorItem.message }}</span>
                        {% endfor %}
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div id="formcle" class="col-md-8">
                       {{ form_widget(form.quantite, { 'attr': {'class': 'form-control', 'placeholder':'Quantit√©'} }) }}
                        {% for errorItem in form.quantite.vars.errors %}
                        <span class="help-inline">{{ errorItem.message }}</span>
                        {% endfor %}
                        
                    </div>
                    <div class="col-md-2"></div>
                </div>
                
                <div class="row">
                    <div class="col-md-2"></div>
                    <div id="formcle" class="col-md-8">
                        {{ form_widget(form.description, { 'attr': {'class': 'form-control', 'placeholder':'Description'} }) }}
                        {% for errorItem in form.description.vars.errors %}
                        <span class="help-inline">{{ errorItem.message }}</span>
                        {% endfor %}
                    </div>
                    <div class="col-md-2"></div>
                </div>
                
                <div class="row">
                    <div class="col-md-2"></div>
                    <div id="formcle" class="col-md-8">
                        {{ form_widget(form.prix, { 'attr': {'class': 'form-control', 'placeholder':'Prix'} }) }}
                        {% for errorItem in form.prix.vars.errors %}
                        <span class="help-inline">{{ errorItem.message }}</span>
                        {% endfor %}
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div style="text-align: center;" class="row">
                    <div class="col-md-5"></div>
                    <div class="col-md-2">
                        <button  type="submit" class="btn btn-block btn-lg btn-success">Ajouter</button>
                    </div>
                    <div class="col-md-5"></div>
                </div>
                
                <div style="text-align: center" class="row">
                    <div class="col-md-5"></div>
                    <div class="col-md-2">
                        <a id="retour" class="btn btn-block btn-lg btn-success" href="{{ path('produit_index') }}">Retour</a>
                    </div>
                    <div class="col-md-5"></div>
                </div>
            
        </div>
    </div>

   
   <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <div style="color:firebrick;" id="buttonretour">
                    <i style="font-weight: 400;" class="fa fa-arrow-left" aria-hidden="true"></i>
                    <a style="color:firebrick;" id="button" href="{{ path('fos_user_security_logout') }}">Deconnexion</a>
                </div>
            </div>
            <div class="col-md-10"></div>
        </div>
    </div>
    {{ form_end(form) }}


    



</body>

</html>