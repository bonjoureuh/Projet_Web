<!doctype html>
<html lang="fr">

<head>
    <meta name="viewport" content="width=device-width" />
    <script src="../js/jquery.min.js"></script>
    <link rel="stylesheet" href="../css/bootstrap.min.css" crossorigin="anonymous">



    <script src="../js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="../font-awesome/css/font-awesome.min.css">
    

    <style>
        #retour {
            background-color: #337ab7;
            border-color: #337ab7;
            margin-top: 5%;
        }

        #formcle input{
            margin-bottom: 15px;
        }

    </style>

</head>


<body>
    {% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">

                <div class="row">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                        <h3 style="color:#337ab7;" class="text-center text-danger">
                            MODIFIER LES INFORMATIONS
                        </h3>
                    </div>
                    <div class="col-md-4">
                    </div>
                </div>

                {{ form_start(edit_form) }}
                <div class="row">
                    <div id="exampleInputEmail1" class="col-md-2"></div>
                    <div class="col-md-8">
                        {{form_row(edit_form.device)}}
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div id="formcle" class="col-md-8">
                        {{form_row(edit_form.clee)}}
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div style="text-align: center;" class="row">
                    <div class="col-md-5"></div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-block btn-lg btn-success" value="Edit">Modifier</button>
                    </div>
                    {{ form_end(edit_form) }}
                    <div class="col-md-5"></div>
                </div>

                <div style="text-align: center" class="row">
                    <div class="col-md-5"></div>
                    <div class="col-md-2">
                        <a id="retour" class="btn btn-block btn-lg btn-success" href="{{ path('sshkey_index') }}">Retour</a>
                    </div>
                    <div class="col-md-5"></div>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
</body>










