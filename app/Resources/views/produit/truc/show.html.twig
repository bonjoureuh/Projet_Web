<!doctype html>
<html lang="fr">


<head>
    <meta name="viewport" content="width=device-width" />
    <script src="./js/jquery.min.js"></script>
    <link rel="stylesheet" href="./css/bootstrap.min.css" crossorigin="anonymous">



    <script src="./js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="./font-awesome/css/font-awesome.min.css">
    



    <style>
        #title {
            font-size: 25px;
            text-align: center;
            margin-bottom: 10%;
        }

        span {
            font-weight: bold;
            text-decoration: none;
            color: #337ab7;
        }

        span:hover {
            color: #337ab7;
            text-decoration: none;
        }

        #info {
            font-size: 15px;


        }

        #button {
            color: #333;
            margin-bottom: 2%;
        }

        #button:hover {
            text-decoration: none;
            color: #777;

        }

        .infdet {
            margin-bottom: 2%;
        }

        #clee {
            text-align: center;
        }

        #clee h1 {
            text-align: center;
            margin-top: 15%;
            margin-bottom: 10%;
            font-size: 25px;
        }

        #clee_txt {
            border-style: solid;
            border-width: 0.5px;
            border-color: #777;
            border-radius: 7px;
        }

    </style>
</head>

<body>
    <div class=container>
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <h1 id="title">Résumé des informations sur l'appareil <span>"{{sshkey.device}}"</span></h1>
            </div>
            <div class="col-md-3">
            </div>
        </div>


        <div id="info" class="container-fluid">
            <div class="row">
                <div class="col-md-3"></div>
                <div id="border" class="col-md-6">

                    <div class="infdet">Identifiant : <span>{{sshkey.id }}</span></div>

                    <div class="infdet">Appareil : <span>{{sshkey.device }}</span></div>


                    <div id="button">
                        <i style="font-weight: 400;" class="fa fa-arrow-left" aria-hidden="true"></i>
                        <a id="button" href="{{ path('sshkey_index') }}">Retour à la liste</a>
                    </div>
                    <div id="button">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                        <a id="button" href="{{ path('sshkey_edit', { 'id': sshkey.id }) }}">Editer</a>
                    </div>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Supprimer"> {{ form_end(delete_form) }}

                </div>
                <div class="col-md-3"></div>
            </div>

        </div>

        <div id="clee" class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <h1>Clée lié à <span>l'appareil : </span></h1>
                </div>
                <div class="col-md-4">
                </div>
            </div>

            <div id="clee_txt" class="row">
                <div class="col-md-12">
                    {% block content %}
                    
                    {{sshkey.clee[0:93]}}
                    {{sshkey.clee[93:93]}}
                    {{sshkey.clee[186:93]}}
                    {{sshkey.clee[279:93]}}
                    
                    {% endblock %}
                </div>
            </div>
        </div>

    </div>
</body>

</html>
